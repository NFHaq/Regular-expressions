def find_date(string_):  
    date_regex = re.compile( r'''(
    ( ( ([0]?[1-9]) | ([1-2][0-9]) | ([3][0-1])  )      # d(01-->09/1-->9/11-->29/30-->31) m(01-->09/1-->9/10-->12) y(1900)
    (-|/|.) #separator                                    #d m y
    (([0]?[1-9]) | ([1][0-2]))
    (-|/|.) #separator
    ([19|20][0-9]{3})
    )
    |
    ( (([0]?[1-9]) | ([1][0-2]))      
    (-|/|.) #separator                                    # m d y
    ( ([0]?[1-9]) | ([1-2][0-9]) | ([3][0-1])  )
    (-|/|.) #separator
    ([19|20][0-9]{3})
    )
    |
    ( ([19|20][0-9]{3})         
    (-|/|.) #separator                                    # y d m
    ( ([0]?[1-9]) | ([1-2][0-9]) | ([3][0-1])  )
    (-|/|.) #separator
    (([0]?[1-9]) | ([1][0-2]))
    )


    )

    ''', re.VERBOSE)

    return date_regex.search(string_).group()
